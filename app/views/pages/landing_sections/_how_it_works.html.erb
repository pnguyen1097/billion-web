<section class='landing-section landing-works' id='landing-works'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1>Have Your Voice Heard</h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'>
            Let us know which choice you think is best
          </p>
        </div>
      </div>
    </div>

    <div class='row'>

      <% col_class = 'col-md-4 col-md-offset-0 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2' %>
      <div class='<%= col_class %>'>
        <%= image_tag 'gbh/gbh-pitch.png', class: 'center-block' %>
        <div class='billion-stage text-center'>
          <h2>Read over the statements</h2>
          <p>
          Read over three, short, one line mission statements that could
          represent philanthropic fund powered by Columbus startups.
          </p>
        </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'gbh/gbh-vote.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>Vote for your favorite</h2>
          <p>
          Purchase points to allocate money to your favorite mission starting today.
          </p>
        </div>
      </div>
      <div class='<%= col_class %>'>
        <%=image_tag 'winner.png', class: 'center-block' %>

        <div class='billion-stage text-center'>
          <h2>The Community's Choice</h2>
          <p>The statement with the most points wins and the money raised from today's votes goes towards the philanthropic fund.</p>
        </div>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12 text-center'>
        <%= link_to 'The Billion Story', story_path, class: 'project-see-all btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</section>

