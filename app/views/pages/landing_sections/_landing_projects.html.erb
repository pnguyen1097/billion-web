<%
    if has_winner
      heading = 'Honorable Mentions'
      subheading = ''
    else
      heading = 'Pick Your Beer'
      subheading = 'What would you drink?'
    end
%>

<section class='landing-section'>
  <div class='container'>
    <div class='landing-section-heading'>
      <h1><%= heading %></h1>
      <div class='row'>
        <div class='col-md-8 col-md-offset-2'>
          <p class='landing-section-subheading'><%= subheading %></p>
        </div>
      </div>
    </div>
    <div class='row'>
      <% projects.each do |project| %>
      <div class='col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-6 col-md-3'>
        <%= render partial: 'shared/project_card', locals: { project: project } %>
      </div>
      <% end %>
    </div>
  </div>
</section>
